{
  "name": "sezo-audio-engine",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "packages/android-engine",
    "packages/expo-module",
    "packages/expo-module/example"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev:example": "yarn build:expo-module && yarn build:android-engine && yarn run:example",
    "build:expo-module": "yarn workspace sezo-audio-engine build",
    "build:android-engine": "cd packages/android-engine/android && ./gradlew :engine:build",
    "build:example:android": "yarn workspace sezo-audio-engine-example android",
    "run:example": "yarn workspace sezo-audio-engine-example android",
    "test": "yarn test:cpp:host",
    "test:cpp:host": "cmake -S packages/android-engine/android/engine/src/test/cpp -B build/sezo-tests-host && cmake --build build/sezo-tests-host && ctest --test-dir build/sezo-tests-host --output-on-failure",
    "test:cpp:host:clean": "rm -rf build/sezo-tests-host",
    "test:cpp:android": "bash packages/android-engine/android/engine/src/test/cpp/scripts/run_android_tests.sh",
    "test:cpp:android:build": "bash packages/android-engine/android/engine/src/test/cpp/scripts/run_android_tests.sh --build-only",
    "test:cpp:android:run": "bash packages/android-engine/android/engine/src/test/cpp/scripts/run_android_tests.sh --run-only",
    "clean": "rm -rf packages/expo-module/dist packages/expo-module/example/android/app/build packages/expo-module/example/android/.gradle",
    "rebuild": "yarn clean && yarn dev:example"
  }
}
