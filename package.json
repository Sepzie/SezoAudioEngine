{
  "name": "sezo-audio-engine",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "packages/android-engine",
    "packages/expo-module"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "echo \"TODO: add lint\"",
    "test": "echo \"TODO: add tests\"",
    "build": "echo \"TODO: add build\"",
    "build:expo-module": "npm --prefix packages/expo-module run build",
    "build:android-engine": "cd packages/android-engine/android && ./gradlew :engine:build",
    "install:example": "npm --prefix packages/expo-module/example install",
    "build:example:android": "npm --prefix packages/expo-module/example run android",
    "apk:example": "cd packages/expo-module/example/android && ./gradlew app:assembleDebug",
    "run:example": "cd packages/expo-module/example && npx expo run:android",
    "install:example:android": "cd packages/expo-module/example/android && ./gradlew app:installDebug",
    "install:example:android:apk": "adb install ./packages/expo-module/example/android/app/build/outputs/apk/debug/app-debug.apk",
    "example:android": "npm run build:android-engine && npm run run:example"
  }
}
